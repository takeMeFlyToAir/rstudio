set -e

if [ -e install-overlay ]
then
  ./install-overlay
fi

cd ../common
./install-common --install-crashpad-sudo
cd ../osx

# desktop dependencies (qt)
if [ "$1" != "--exclude-qt-sdk" ]
then
  ./install-qt-macos
fi

# enable PAM
sudo cp /etc/pam.d/cups /etc/pam.d/rstudio
