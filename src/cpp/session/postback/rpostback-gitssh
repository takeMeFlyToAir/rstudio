set -e

SSH_AGENT_SCRIPT=$("$RS_RPOSTBACK_PATH" gitssh 2> /dev/null)
eval "$SSH_AGENT_SCRIPT" &> /dev/null
ssh -o StrictHostKeyChecking=no $*
