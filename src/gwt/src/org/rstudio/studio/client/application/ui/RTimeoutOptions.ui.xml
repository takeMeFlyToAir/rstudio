<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
   xmlns:g="urn:import:com.google.gwt.user.client.ui">
   <ui:style>
   .host
   {
      margin-top: 20px;
   }
   
   .warning
   {
      font-weight: 400;
      margin-top: 10px;
      margin-bottom: 10px;
   }
   
   .host button
   {
      margin-left: 5px;
      margin-right: 5px;
      border: none;
      border-radius: 4px;
      color: white;
      background-color: #767676;
      padding-top: 3px;
      padding-bottom: 3px;
      padding-left: 6px;
      padding-right: 6px;
      display: inline-block;
   }
   
   .status
   {
      margin-top: 20px;
      font-style: italic;
      color: #a0a0a0;
   }
   </ui:style>
   <g:HTMLPanel styleName="{style.host}">
      <g:Label styleName="{style.warning}" text="R is taking longer to start than usual."
               ui:field="visibleMsg_"></g:Label>
      <g:VerticalPanel>
         <g:HorizontalPanel>
            <g:Button text="Reload" ui:field="reload_"></g:Button>
            <g:Button text="Safe Mode" ui:field="safeMode_"></g:Button>
            <g:Button text="Terminate R" ui:field="terminate_"></g:Button>
         </g:HorizontalPanel>
      </g:VerticalPanel>
      <g:Label styleName="{style.status}" ui:field="status_"></g:Label>
   </g:HTMLPanel>
</ui:UiBinder> 
