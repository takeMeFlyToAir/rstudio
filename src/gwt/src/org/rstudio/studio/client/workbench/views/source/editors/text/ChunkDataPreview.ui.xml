<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
xmlns:g="urn:import:com.google.gwt.user.client.ui">
<ui:style type="org.rstudio.studio.client.workbench.views.source.editors.text.ChunkDataPreview.DataPreviewStyle">
.host
{
  width: 100%;
  height: 100%;
  overflow: hidden;
}

.data
{
  transform: scale(0.2);
  width: 500%;
  height: 500%;
  top: -195%;
  left: -200%;
  position: absolute;
}

.screen
{
  width: 100%;
  height: 100%;
  z-index: 5;
  position: absolute;
  top: 0px;
  left: 0px;
}
</ui:style>
<g:HTMLPanel styleName="{style.host}">
  <g:HTMLPanel styleName="{style.screen}"></g:HTMLPanel>
  <g:SimplePanel ui:field="dataHost_" styleName="{style.data}"></g:SimplePanel>
</g:HTMLPanel>
</ui:UiBinder> 
