<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
xmlns:g="urn:import:com.google.gwt.user.client.ui">
<ui:style type="org.rstudio.studio.client.workbench.views.source.editors.text.ChunkOutputGallery.GalleryStyle">
.thumbnail {
   opacity: 0.5;
   cursor: pointer;
   transition: opacity 0.5s ease;
   display: block;
   margin-left: 10px;
   margin-right: 10px;
   margin-top: 1px;
   margin-bottom: 10px;
   padding: 3px;
   border: 1px solid gray;
   border-radius: 2px;
   width: 100px;
   height: 61px;
   float: left;
   position: relative;
}

.thumbnail:hover {
   opacity: 1;
}

.thumbnail:focus {
   outline: none;
}

.selected {
   opacity: 1;
   border: 2px solid gray;
   margin-left: 9px;
   margin-right: 9px;
   margin-top: 0px;
   margin-bottom: 9px;
}

.viewer {
   clear: both;
}

.filmstrip {
   overflow: hidden;
}

.expand {
   display: -ms-flexbox;
   display: -webkit-flex;
   display: flex;

   -ms-flex-direction: column;
   -webkit-flex-direction: column;
   flex-direction: column;

   height: 100%;
   width: 100%;
}

.expand .filmstrip {
   display: -ms-flexbox;
   display: -webkit-flex;
   display: flex;

   padding-bottom: 12px;

   min-height: 70px;
   height: 70px;
}

.expand .viewer {
   display: -ms-flexbox;
   display: -webkit-flex;
   display: flex;

   -ms-flex-grow: 1;
   -webkit-flex-grow: 1;
   flex-grow: 1;
}

.expand .content {
   display: -ms-flexbox;
   display: -webkit-flex;
   display: flex;

   width: 100%;
}

</ui:style>
<g:HTMLPanel>
    <g:FlowPanel styleName="{style.filmstrip}" ui:field="filmstrip_">
    </g:FlowPanel>
    <g:HTMLPanel styleName="{style.viewer}" ui:field="viewer_">
    </g:HTMLPanel>
</g:HTMLPanel>
</ui:UiBinder> 
